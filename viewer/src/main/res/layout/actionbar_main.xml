<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/actionBarColor">
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_settings"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:scaleX=".9"
                android:scaleY=".9"
                android:layout_gravity="center"
                android:tint="#000000"
                android:padding="10dp"
                android:layout_marginEnd="15dp"
                android:background="#00000000"
                android:id="@+id/settingsButton"/>
        <!--
                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/teamNumberSearch"
                    android:inputType="number"
                    android:layout_centerVertical="true"
                    android:background="#000000"
                    android:padding="10dp"
                    android:textColor="#ffffff"
                    android:textColorHint="#777777"
                    android:backgroundTint="#000000"
                    android:hint="Team Number"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/settingsButton"
                    app:backgroundTint="#000000" />
                    -->
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/teamsGroupButton"
                android:text="@string/show_teams_button_label"
                android:layout_gravity="center"
                android:background="@drawable/shape_button_outline"
                android:backgroundTint="#000000"
                android:textColor="#FFFFFF"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:padding="5dp"
                android:elevation="15dp"/>
        <android.support.v7.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX=".5"
                android:scaleY=".5"
                android:src="@drawable/ic_clear"
                android:layout_gravity="center"
                android:id="@+id/clearButton"
                android:tint="#000000"
                android:background="#00000000"/>
        <android.support.v7.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/clearButton"
                android:layout_gravity="center"
                android:background="#00000000"
                android:text="AVG"
                android:id="@+id/calculationButton"
                android:theme="@style/Switch"/>
    </LinearLayout>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_refresh"
            android:scaleY=".9"
            android:scaleX=".9"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:tint="#000000"
            android:padding="10dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/refreshButton"/>
    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="visible"
            android:background="#00000000"
            android:layout_margin="4dp"
            android:id="@+id/indeterminateBar"
            android:tint="#000000"
            android:indeterminateTint="#000000"
            android:layout_alignParentEnd="true"/>

</RelativeLayout>